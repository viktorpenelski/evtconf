<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="byfo.evtconf.MainActivity">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_container"
        android:orientation="vertical" />
    <!--TODO(vic): align the ListView so that it ends on top of buttons. Buttons can have fixed size-->

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="0.9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/twitch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/twitchtv_logo"
            android:contentDescription="Twitch Chat"
            android:onClick="loadTwitchChatWebView" />

        <ImageButton
            android:id="@+id/twitch_button_2"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/twitchtv_logo"
            android:contentDescription="Twitch Chat"
            android:onClick="loadTwitchChatWebView" />

        <ImageButton
            android:id="@+id/twitch_button_3"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/twitchtv_logo"
            android:contentDescription="Twitch Chat"
            android:onClick="loadTwitchChatWebView" />


    </LinearLayout>


</RelativeLayout>
