<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="byfo.evtconf.MainActivity">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttons" />
<!--TODO(vic): align the ListView so that it ends on top of buttons. Buttons can have fixed size-->
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/list_view"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/twitch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/twitchtv_logo"
            android:contentDescription="Twitch Chat"
            android:onClick="loadTwitchChatWebView" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
